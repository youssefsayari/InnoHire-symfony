{% extends 'base.html.twig' %}

{% block title %}Edit Utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Add your custom CSS styles here */
        .form-container {
            width: 50%;
            margin: auto;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-label {
            color: purple; /* Set label text color to purple */
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .btn {
            background-color: #800080; /* Purple color for button background */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 10px; /* Add margin to separate button from form */
        }
        .btn:hover {
            background-color: #6a007b; /* Darker purple on hover */
        }
        .btn-danger {
            background-color: #f44336 !important; /* Red color for delete button */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 style="color: #800080;">Edit Utilisateur</h1>


{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.cin, 'CIN:', {'label_attr': {'class': 'form-label text-purple'}}) }}
        {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
         {% if form_errors(form.cin) %}
                       <div class="error-message">
                           {{ form_errors(form.cin) }}
                       </div>
                   {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.nom, 'Nom:', {'label_attr': {'class': 'form-label text-purple'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
         {% if form_errors(form.nom) %}
                       <div class="error-message">
                           {{ form_errors(form.nom) }}
                       </div>
                   {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.prenom, 'Pr√©nom:', {'label_attr': {'class': 'form-label text-purple'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
         {% if form_errors(form.prenom) %}
                       <div class="error-message">
                           {{ form_errors(form.prenom) }}
                       </div>
                   {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.adresse, 'Adresse:', {'label_attr': {'class': 'form-label text-purple'}}) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
         {% if form_errors(form.adresse) %}
                       <div class="error-message">
                           {{ form_errors(form.adresse) }}
                       </div>
                   {% endif %}
    </div>
   
<div class="form-group">
    {{ form_label(form.mdp, 'Mot de passe:', {'label_attr': {'class': 'form-label text-purple'}}) }}
    {{ form_widget(form.mdp, {'attr': {'class': 'form-control masked-password', 'autocomplete': 'new-password'}}) }}
    {% if form_errors(form.mdp) %}
        <div class="error-message">
            {{ form_errors(form.mdp) }}
        </div>
    {% endif %}
</div>
<div class="form-group">
    {{ form_label(form.image, 'Image:', {'label_attr': {'class': 'form-label text-purple'}}) }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
    {% if form_errors(form.image) %}
        <div class="error-message">
            {{ form_errors(form.image) }}
        </div>
    {% endif %}
</div>

<style>
    .masked-password {
        -webkit-text-security: disc;  /* Safari */
        text-security: disc;          /* Other modern browsers */
    }
</style>




   
    <button type="submit" class="btn btn-purple">Submit</button>
{{ form_end(form) }}

        <a href="{{ path('app_utilisateur_index') }}" class="btn btn-danger">Back to List</a>
    </div>
{% endblock %}
