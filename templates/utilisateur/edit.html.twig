{% extends 'base.html.twig' %}

{% block title %}Edit Utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Add your custom CSS styles here */
        .form-container {
            width: 50%;
            margin: auto;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-label {
            color: purple; /* Set label text color to purple */
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .btn {
            background-color: #800080; /* Purple color for button background */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 10px; /* Add margin to separate button from form */
        }
        .btn:hover {
            background-color: #6a007b; /* Darker purple on hover */
        }
        .btn-danger {
            background-color: #f44336 !important; /* Red color for delete button */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 style="color: #800080;">Edit Utilisateur</h1>

        {{ include('utilisateur/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_utilisateur_index') }}" class="btn btn-danger">Back to List</a>
    </div>
{% endblock %}
