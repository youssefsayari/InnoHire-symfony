{% extends 'baseFront.html.twig' %}
{% block title %}Etablissement index
{% endblock %}


{% block publication %}
	<!-- Team Start -->
	<div class="container-xxl py-5">
		<div class="container py-5 px-lg-5">
			<div class="wow fadeInUp" data-wow-delay="0.1s">
				<p class="section-title text-secondary justify-content-center">
					<span></span>Our Team<span></span>
				</p>
				<h1 class="text-center mb-5">Our Team Members</h1>
			</div>
			<div class="row g-4">

<a href="{{ path('app_post_newFront') }}">Create new +</a>
    
{% for post in posts %}
			
				<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
					<div class="team-item bg-light rounded">
						<div class="text-center border-bottom " style="margin-bottom: 10px;">
							<div style="overflow: hidden;">
								<br>
								<div style="float: left; margin-right: 10px;">

									<img class="img-fluid rounded-circle mb-4" src="{{ asset('imagesOumayma/' ~ post.getUtilisateur().getImage()) }}" alt="" style="width: 50px; height: 50px;">

								</div>
								<div style="float: left;">
									<h5 style="text-align: left;">{{ post.getUtilisateur().getNom()}}</h5>
									<span>publi√© le  {{ post.date ? post.date|date('Y-m-d H:i:s') : ''  }} </span>
								</div>

							</div>
						</div>

						<div class="text-center border-bottom " style="margin-bottom: 10px;">
							<div class=" portfolio-item first wow fadeInUp" data-wow-delay="0.1s">
								<div class="rounded overflow-hidden">
									<div class="bg-light p-1">

										<h5 class="lh-base mb-0" style="text-align: left;">
											{{ post.caption }}
										</h5>

									</div>

									<div class="position-relative overflow-hidden">

										<img class="img-fluid w-100" src="{{ asset('imagesOumayma/' ~ post.image) }}" alt="">
										<div class="portfolio-overlay">
											<a class="btn btn-square btn-outline-light mx-1" href="{{ asset('assets/img/' ~ post.image) }}" data-lightbox="portfolio"> {# lezem limage taa star hedha tkoun fel blasa edhika assets/img/ sinon ki tenzel aaleha matloadich  #}
												<i class="fa fa-eye"></i>
											</a>

										</div>
									</div>
									<br>

								</div>
							</div>
						</div>


						<div class="d-flex justify-content-center p-4">
							<a class="btn btn-square mx-1" href="#">
								<i class="far fa-thumbs-up"></i>
							</a>
							<a class="btn btn-square mx-1"  href="{{ path('app_post_editfront', {'id_post': post.idPost}) }}">
								<i class="far fa-comment"></i>
							</a>
							<a class="btn btn-square mx-1"  href="{{ path('app_post_editfront', {'id_post': post.idPost}) }}">
								<i class="far fa-sync"></i>
							</a>

							<a class="btn btn-square mx-1" href="{{ path('app_post_deleteFront', {'id_post': post.idPost}) }}">
								<i class="fas fa-exclamation-triangle"></i>
							</a>

						</div>
					</div>
				</div>

{% endfor %}

</div>
		</div>
	</div>
	<!-- Team End -->
{% endblock %}