{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_post</th>
                <td>{{ post.idPost }}</td>
            </tr>
            <tr>
                <th>Audience</th>
                <td>{{ post.audience }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ post.caption }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>TotalReactions</th>
                <td>{{ post.totalReactions }}</td>
            </tr>
            <tr>
                <th>NbComments</th>
                <td>{{ post.nbComments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_post_edit', {'id_post': post.id_post}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
