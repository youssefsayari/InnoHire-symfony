    <table class="table">
        <thead>
            <tr>
                <th>Id_commentaire</th>
                <th>Description_co</th>
                <th>Date_co</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.getIdCommentaire }}</td>
                <td>{{ commentaire.descriptionCo }}</td>
                <td>{{ commentaire.dateCo ? commentaire.dateCo|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id_commentaire': commentaire.getIdCommentaire}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'id_commentaire': commentaire.getIdCommentaire}) }}">edit</a>
