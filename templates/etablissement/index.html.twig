 <style>
       
        .my-button {
            background-color: #444;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        
        .my-button:hover {
            background-color: #666; 
            
        }
    </style>

    {#------------------END CSS---------------------------- #}

    {% endblock %}