  {% extends 'base.html.twig' %} 

{% block title %}Etablissement index{% endblock %}



{% block body %}
    <h1  style="color: white;" >Etablissement index</h1>


<div style="background-color: #333; color: white; padding: 20px;">



    <table class="table">
        <thead>
            <tr>
                <th style="padding: 20px;" >Id</th>  
                <th style="padding: 20px;" >Nom</th>
                <th style="padding: 20px;" >Lieu</th>
                <th style="padding: 20px;">Code_etablissement</th>
                <th style="padding: 20px;">Type_etablissement</th>
                <th style="padding: 20px;">Image</th>
                <th style="padding: 20px;">Id Utilisateur</th> {# Add this column header #}
                <th style="padding: 20px;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etablissement in etablissements %}
            <tr>
                <td style="padding: 20px;">{{ etablissement.id }}</td> 
                <td style="padding: 20px;">{{ etablissement.nom }}</td>
                <td style="padding: 20px;">{{ etablissement.lieu }}</td>
                <td style="padding: 50px;">{{ etablissement.codeEtablissement }}</td>
                <td style="padding: 50px;">{{ etablissement.typeEtablissement }}</td>
                <td style="padding: 20px;">{{ etablissement.image }}</td>
               <td style="padding: 50px;">{{ etablissement.getUtilisateur().getIdUtilisateur()}}</td>
            <td>
                        <a href="{{ path('app_etablissement_show', {'id': etablissement.id}) }}" style="color: white; text-decoration: none;">
                            <button class="my-button">
                                Show
                            </button>
                        </a>
                        <a href="{{ path('app_etablissement_edit', {'id': etablissement.id}) }}" style="color: white; text-decoration: none;">
                            <button class="my-button">
                                Edit
                            </button>
                        </a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>

    <a href="{{ path('app_etablissement_new') }}" style="color: white;" >Create new</a>

